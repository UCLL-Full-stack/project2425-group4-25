generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Garage {
  id     Int    @id @default(autoincrement())
  name   String
  size   Int
  place  String
  cars   Car[]
}

model Car {
  id           Int                @id @default(autoincrement())
  color        String
  electric     Boolean
  brand        String
  garageId     Int
  garage       Garage             @relation(fields: [garageId], references: [id])
  maintenances Car2Maintenance[]
}

model Maintenance {
  id          Int              @id @default(autoincrement())
  type        String
  description String
  cost        Float
  date        DateTime
  duration    Int
  cars        Car2Maintenance[]
}

model Car2Maintenance {
  carId         Int
  maintenanceId Int
  car           Car         @relation(fields: [carId], references: [id])
  maintenance   Maintenance @relation(fields: [maintenanceId], references: [id])
  @@id([carId, maintenanceId])
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  firstName String
  lastName  String
  email     String    @unique
  role      String
  password  String
}